<map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="18" polyline="{{polyline}}"show-location style="width: 100%; height: 300px;"></map>

<view class="container">
  <view class="clock">
    {{min}}:{{seconds}}:{{ms}}
  </view>
  <view>
    <view style="display:flex; width:100vw; align-items:center;justify-content:center;">
      <view wx:if="{{END}}" class="btn-end" bindtap="end" style="margin-right:5vw">结束</view>
      <view wx:if="{{STOP}}" class="btn-stop" bindtap="stop">暂停</view>
      <view class="btn-start" bindtap="start" wx:if="{{START}}">开始</view>
    </view>
  </view>
 
</view>